<?xml version="1.0" encoding="utf-8"?>
<manifest package="nanodegree.android.udacity.myappportfolio"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PopularMovies"
            android:label="@string/title_activity_popular_movies"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nanodegree.android.udacity.myappportfolio.MainActivity"/>
        </activity>
        <activity android:name=".MovieDetail">
        </activity>
    </application>

</manifest>
